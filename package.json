{
  "name": "ac-server-manager",
  "version": "1.0.0",
  "description": "Web-based management interface for Assetto Corsa dedicated servers",
  "main": "server/src/index.js",
  "scripts": {
    "start": "node server/src/index.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/src/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint server/src/**/*.js client/src/**/*.{js,jsx}",
    "lint:fix": "eslint server/src/**/*.js client/src/**/*.{js,jsx} --fix",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": [
    "assetto-corsa",
    "server-manager",
    "game-server",
    "racing",
    "simulation"
  ],
  "author": "Brewsker",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ini": "^4.1.1",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
